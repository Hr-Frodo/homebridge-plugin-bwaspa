{
  "pluginAlias": "Balboa-Spa",
  "pluginType": "platform",
  "headerDisplay": "This plugin works with Balboa-Spa wifi modules. Each pump, lights, etc are exposed HomeKit as separate accessories.",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "placeholder": "My Hot Tub"
      },
      "host": {
        "title": "IP Address",
        "type": "string",
        "placeholder": "192.168.1.151",
        "required": true,
        "format": "hostname"
      },
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Device name",
              "type": "string",
              "placeholder": "my Pump or light or...",
              "required": true
            },
            "pumpRange": {
              "title": "Pump speed range (required for pumps)",
              "type": "integer",
              "maximum": 2,
              "oneOf": [
                {
                  "title": "Off or High",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "Off or Low or High",
                  "enum": [
                    2
                  ]
                }
              ],
              "required": false
            },
            "deviceType": {
              "title": "Device type",
              "type": "string",
              "default": "Lights 1",
              "oneOf": [
                {
                  "title": "Pump 1",
                  "enum": [
                    "Pump 1"
                  ]
                },
                {
                  "title": "Pump 2",
                  "enum": [
                    "Pump 2"
                  ]
                },
                {
                  "title": "Pump 3",
                  "enum": [
                    "Pump 3"
                  ]
                },
                {
                  "title": "Pump 4",
                  "enum": [
                    "Pump 4"
                  ]
                },
                {
                  "title": "Pump 5",
                  "enum": [
                    "Pump 5"
                  ]
                },
                {
                  "title": "Pump 6",
                  "enum": [
                    "Pump 6"
                  ]
                },
                {
                  "title": "Lights 1",
                  "enum": [
                    "Lights 1"
                  ]
                },
                {
                  "title": "Lights 2",
                  "enum": [
                    "Lights 2"
                  ]
                },
                {
                  "title": "Temperature Sensor",
                  "enum": [
                    "Temperature Sensor"
                  ]
                },
                {
                  "title": "Temperature Control",
                  "enum": [
                    "Thermostat"
                  ]
                },
                {
                  "title": "Water Flow Problem Sensor",
                  "enum": [
                    "Water Flow Problem Sensor"
                  ]
                }
              ],
              "required": true
            }
          }
        }
      }
    }
  }
}